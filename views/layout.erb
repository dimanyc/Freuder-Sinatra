</head>
<body>
	<div class="row" id="header">
	  <div class="navbar navbar-inverse">
	    <div class="container">
	      <div class="navbar-header">
	        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </button>
	        <a class="navbar-brand" href="/"><h1>Freuder</h1></a>
	      </div>
	      <div class="collapse navbar-collapse">
	        <ul class="nav navbar-nav"><% menu_options.each do |i| %>
			 <li><a href="/<%= i %>"><%= i %></a></li><% end %>            			
	        </ul><!---end_nav ul-->
				<div class="col-md-2 pull-right" id="dn_nav-pills">
					<% if (session[:user_id])%>
						Hi, <%=User.where(id: session[:user_id]).first.fname %>
						<span class="badge"><a href="/logout">Logout</a></span>
					<% else %>		
						<span class="badge"><a href="/sign-in">Sign-In</a></span>
					<% end %>	
				</div><!--end_#dn_nav-pills-->
	      </div><!--/.nav-collapse -->




	    </div><!--end_container-->
	  </div><!--end_navbar-->
	</div><!--end_.row-->
		<% if flash.has?(:notice) %>
		<div class="dn_ad">
		<div class="row">
			<div class="container">
			    <div class="alert alert-success fade in" role="alert">
				    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
			    	 <strong><%= flash[:notice] %></strong>
			    </div>
			</div><!--end_.container-->
		</div><!--end_.row-->
		</div><!--end_dn_ad-->
		<%elsif flash.has?(:alert) %>
		<div class="dn_ad">
		<div class="row">
			<div class="container">
			    <div class="alert alert-warning fade in" role="alert">
				    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
			    	 <strong><%= flash[:alert] %></strong>
			    </div>
			</div><!--end_.container-->
		</div><!--end_.row-->
		</div><!--end_dn_ad-->	
		<% end %>

	<%=yield %>

		
	<small>Session ID: <%=session[:user_id] %></small>
</body>
</html>

